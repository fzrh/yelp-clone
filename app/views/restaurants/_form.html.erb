<% if @restaurant.errors.any? %>
  <div id='error-list'>
  <h2>Errors</h2>
  <ul>
  <% @restaurant.errors.full_messages.each do |error| %>
  <li> <%= error %> </li>
<% end %>
</ul>
  </div>
<% end %>

<%= form_for @restaurant do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :cuisine %>
  <%= f.text_field :cuisine %>

  <%= f.submit %>
  
<% end %> 